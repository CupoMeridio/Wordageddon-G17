                   </children>
               </VBox>
            <HBox fx:id="schermataDiRegistrazione" alignment="CENTER" spacing="50" style="-fx-padding: 40;" visible="false">
        <children>
            <!-- Form di registrazione -->
            <VBox alignment="CENTER" spacing="15" HBox.hgrow="ALWAYS">
                <Label fx:id="usernameLabel" text="Username" />
                <TextField fx:id="username" promptText="Username..." />

                      <Label fx:id="emailLabel" text="E-mail" />
                <TextField fx:id="email" promptText="mariorossi@gmail.com" />

                      <Label fx:id="passwordLabel" text="Password" />
                <PasswordField fx:id="password" promptText="Password" />

                      <Label fx:id="repeatLabel" text="Repeat password" />
                <PasswordField fx:id="repeatPassword" promptText="Repeat password" />

                      <Button fx:id="registerButton" onAction="#registerButtonOnAction" text="Registrati" />
                <Button fx:id="registerPageLogin" onAction="#passaALogin" text="Hai già un account? Effettua il login" />
            </VBox>

                  <!-- Immagine profilo -->
            <VBox alignment="CENTER" maxWidth="300" HBox.hgrow="ALWAYS">
                <ImageView fx:id="imageView" fitHeight="208" fitWidth="208" onMouseClicked="#caricaIMG" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../imgs/Profile_avatar_placeholder_large.png" />
                    </image>
                </ImageView>
            </VBox>
        </children>
    </HBox>
            <VBox fx:id="schermataInfoUtente" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
