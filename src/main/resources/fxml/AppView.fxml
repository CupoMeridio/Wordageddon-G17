                                    <TableColumn fx:id="facilePosizione" editable="false" prefWidth="75.0" sortable="false" text="Posizione" />
                                               <TableColumn fx:id="facileNome" editable="false" prefWidth="105.0" sortable="false" text="Nome" />
                                               <TableColumn fx:id="facilePunteggio" editable="false" prefWidth="93.0" sortable="false" text="Punteggio" />
                                           </columns>
                                           <columnResizePolicy>
                                               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                           </columnResizePolicy>
                                       </TableView>
                                   </children>
                               </VBox>
   
                               <!-- Media -->
                               <VBox alignment="TOP_CENTER">
                                   <children>
                                       <Label text="Media" />
                                       <TableView fx:id="mediaTable" VBox.vgrow="ALWAYS">
                                           <columns>
                                    <TableColumn fx:id="mediaPosizione" editable="false" prefWidth="75.0" sortable="false" text="Posizione" />
