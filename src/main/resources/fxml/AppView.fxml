                                           </columns>
                                           <columnResizePolicy>
                                               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                           </columnResizePolicy>
                                       </TableView>
                                   </children>
                               </VBox>
   
                               <!-- Difficile -->
                               <VBox alignment="TOP_CENTER">
                                   <children>
                                       <Label text="Difficile" />
                                       <TableView fx:id="difficileTable" VBox.vgrow="ALWAYS">
                                           <columns>
                                    <TableColumn fx:id="difficilePosizione" editable="false" prefWidth="75.0" sortable="false" text="Posizione" />
